{
    "name": "palpalette-backend",
    "version": "0.1.0",
    "description": "Backend for PalPalette color sharing system",
    "main": "dist/main.js",
    "scripts": {
        "start": "nest start",
        "start:dev": "nest start --watch",
        "test": "jest",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\"",
        "migration:run": "node --require tsconfig-paths/register ./node_modules/typeorm/cli.js migration:run -d dist/data-source.js",
        "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js migration:generate src/migrations/GeneratedMigration -d src/data-source.ts",
        "seed": "node dist/seeds/seed.js",
        "populate-secrets": "ts-node -r tsconfig-paths/register src/scripts/run-populate-secrets.ts"
    },
    "dependencies": {
        "@nestjs/common": "^11.1.5",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^11.1.5",
        "@nestjs/jwt": "^11.0.0",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^11.1.5",
        "@nestjs/platform-socket.io": "^11.1.5",
        "@nestjs/testing": "^11.1.5",
        "@nestjs/typeorm": "^11.0.0",
        "@nestjs/websockets": "^11.1.5",
        "@types/bcrypt": "^6.0.0",
        "@types/socket.io": "^3.0.1",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "dotenv": "^16.0.3",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.10.0",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "socket.io": "^4.8.1",
        "sqlite3": "^5.1.7",
        "typeorm": "^0.3.25",
        "uuid": "^10.0.0",
        "ws": "^8.18.3"
    },
    "devDependencies": {
        "@nestjs/cli": "^11.0.7",
        "@types/jest": "^30.0.0",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^10.0.0",
        "jest": "^30.0.5",
        "nodemon": "^3.1.10",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.0.4"
    }
}